    </div>

    <!-- memorial -->

    <div class="bg-secondary text-primary m-8 p-8 rounded-[3rem] flex flex-col gap-8">
        <span class="xl:text-5xl lg:text-4xl md:text-3xl text-2xl font-ladyrose" >
